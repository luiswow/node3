extends ../layout

block content
    a.btn.btn-outline-primary(href='/user/create') New User

    br
    br

    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Nombre
                th(scope='col') Email
                th(scope='col') Verificado
                th(scope='col')
                th(scope='col')
        tbody
            each user in users
                tr
                    td(scope="row")
                        =usuario.id
                    td= usuario.nombre
                    td= usuario.email
                    td= usuario.verificado ? 'YES' : 'NO'
                    td
                        a.btn.btn-outline-secondary(href='usuarios/' + usuario.id + '/update') Editar
                    td
                        form.inline(method='post' action='usuarios/' + usuario.id + '/delete')
                            input(type='hidden' name='id' value= usuario.id)
                            button.link-button.btn.btn-danger(type='submit' name='submit_param' value='submit_value')
                                = 'Eliminar'
